{
  "manifest_version": 3,
  "name": "BV SHOP 出貨明細標籤列印",
  "version": "3.2.0",
  "description": "將出貨明細轉換為10×15cm標籤格式，支援設定檔儲存與數量標示",
  "permissions": ["storage"],
  "host_permissions": [
    "https://bvshop-manage.bvshop.tw/*"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://bvshop-manage.bvshop.tw/order_print*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
